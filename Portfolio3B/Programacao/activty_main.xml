<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61B3EA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textCookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="144dp"
        android:text="Cookie"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Cookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCookie"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/bCookie"
        android:layout_width="114dp"
        android:layout_height="104dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="144dp"
        android:backgroundTint="#000000"
        android:onClick="play"
        android:text="🍪"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCookie" />

    <Button
        android:id="@+id/butao"
        android:layout_width="55dp"
        android:layout_height="51dp"
        android:layout_marginStart="323dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#4CB6FB"
        android:onClick="click"
        android:text="ඞ"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
